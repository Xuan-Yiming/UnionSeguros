<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Detalle Plan SOAT</title>
    
    <link rel="icon" type="image/x-icon" href="../public/resources/icons/page-icon-blue.png">
    
    <link rel="stylesheet" href="../public/stylesheets/style.css">
    <link rel="stylesheet" href="../public/stylesheets/client/form.css">
    <link rel="stylesheet" href="../public/stylesheets/admin/adminDetalle.css">

    <script type="text/javascript" src="../public/scripts/admin/adminDetallePlanSOAT.js"></script>
    <script type="text/javascript" src="../public/scripts/conection.js"></script>

</head>

<body class="container">
    <%-include('../layouts/header'); %>
    <main>
        <div class="content-container">
            <div id="content-container-item-regresar" class="content-container-item">
                <button id="regresar" class="button-previous">Regresar</button>
            </div>
            
            <div class="form-inputs">
                <h2 id = "titulo">Detalle Plan #</h2>
                <h2 id="id"></h2>
                <div class="form-line">
                    <div class="form-item">
                        <h3>Nombre</h3>
                        <input id="txt-nombre" type="text" placeholder="Ingresar nombre"></input>
                    </div>
                </div>
                <div class="form-line">
                    <div class="form-item">
                        <h3>Moneda</h3>
                        <select id="select-moneda">
                            <option value="1">Soles</option>
                            <option value="2">Dolares</option>
                        </select>
                    </div>
                    <div class="form-item">
                        <h3>Precio</h3>
                        <input id="txt-precio" type="text" placeholder="Ingrese precio"></input>
                    </div>
                </div>
                <div class="form-line">
                    <div class="form-item">
                        <h3>Monto Cobertura</h3>
                        <input id="txt-cobertura" type="text" placeholder="Ingrese monto"></input>
                    </div>
                    <div class="form-item">
                        <h3>Estado</h3>
                        <select id="select-estado">
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                    </div>
                </div>
        
        </div>
        
        <div class="content-container-item bottom">
            <button id="btn-guardar" class="button-red">Guardar</button>
        </div>
        
        </div>
    </main>
</body>
</html>